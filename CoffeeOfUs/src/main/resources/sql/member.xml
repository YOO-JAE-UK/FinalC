<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Members">

<!-- 아이디 체크 -->
 <select id ="idcheck" resultType="member" parameterType="String">
	select * from member where user_id = #{id}
</select>

<!-- 이메일 체크 -->
 <select id ="emailcheck" resultType="member" parameterType="String">
	select * from member where user_email = #{email}
</select>

<!-- 닉네임 체크 -->
 <select id ="nicknamecheck" resultType="member" parameterType="String">
	select * from member where user_nickname = #{nickname}
</select>

<!--  -->
<insert id="insert" parameterType="member">

		insert into member(USER_ID, USER_PASS, USER_NAME, 
		            USER_NICKNAME, USER_EMAIL, USER_ADDRESS_POST, USER_ADDRESS,
		            USER_PHONE, USER_IMG, USER_CHECK)
		values
		(#{USER_ID},#{USER_PASS},#{USER_NAME},
		 #{USER_NICKNAME},#{USER_EMAIL},#{USER_ADDRESS_POST},#{USER_ADDRESS},
		 #{USER_PHONE},#{USER_IMG}, '0')

</insert>  

<delete id="delete" parameterType="String">
   delete from member where USER_ID = #{id}
</delete>

<!--            마이바티스 환경설정에서 정한 member
<update id="update" parameterType="member">
   update member
   set USR_NAME = #{name}, age = #{age} ,
        gender = #{gender} , email = #{email}
   where id = #{id}        
</update> -->



<!--관리자 회원 목록 보기  -->
<select id="getSearchList" parameterType="map" resultType="member">

	select * 
	from (select rownum rnum, b.*
			from (select *
			       from member
			     where USER_ID !='admin'
				  <include refid="search_"/>
				order by USER_ID
			)b	
	)
	where rnum &gt;=#{start} and rnum  &lt;= #{end}
</select>

<select id="searchCount" parameterType="map" resultType="int">
    select count(*)
    from member
    where USER_ID != 'admin'
   <include refid="search_"/>
</select>

<sql id="search_">
   <if test="search_field!=null">
	and
		<choose>
		   <when test="search_field=='id'">id</when>
		   <when test="search_field=='name'">name</when>
		   <when test="search_field=='nickname'">nickname</when>
		   <when test="search_field=='gender'">gender</when>
	    </choose>
	     like #{search_word}
   </if>
</sql>











</mapper>